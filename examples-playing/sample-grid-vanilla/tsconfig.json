{
  "compilerOptions": {
    "outDir": "./dist/",
    "target": "es5",
    "module": "esnext",
    "sourceMap": true,
    "allowJs": false,
    "jsx": "preserve",
    "moduleResolution": "node",
    "rootDir": "src",
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": false,
    "noUnusedLocals": false,
    "removeComments": false,
    "declaration": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "emitDecoratorMetadata": false,
    "experimentalDecorators": true,
    "downlevelIteration": true,
    "importHelpers": true,
    "pretty": true,
    "lib": ["es2015", "esnext", "dom"]
  },
  "include": ["src/**/*"],
  "exclude": [
    "node_modules/**/*",
    "src/**/*.tests.tsx",
    "src/**/*.stories.tsx",
    "bak/**/*"
  ]
}
